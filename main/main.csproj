    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Condition="'$(Configuration)' != 'Debug'" Include="..\LICENSE">
      <Link>LICENSE</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
